<% include partials/head %>
<% include partials/navbar %>

<main id="new-form-container" class="ui container">

    <h1>Edit - "<%= blog.title %>"</h1>
    <form class="ui form" action="/blogs/<%= blog._id%>?_method=PUT" method="POST">
        <div class="field">
          <label>Title: </label>
          <input type="text" name="blog[title]" placeholder="Enter Title" value="<%= blog.title %>" >
        </div>
        <div class="field">
          <label>Image Url: </label>
          <input type="text" name="blog[image]" placeholder="Enter Image Url" value="<%= blog.image %>">
        </div>
        <div class="field">
           <label>Body: </label>
           <textarea name="blog[body]" placeholder="Enter Post"><%= blog.body %></textarea> 
        </div>
        <button class="ui inverted violet button" type="submit">Update</button>
      </form>

</main>

<% include partials/footer %>